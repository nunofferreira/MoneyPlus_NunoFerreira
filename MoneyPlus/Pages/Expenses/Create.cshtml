@page
@model MoneyPlus.Pages.Expenses.CreateModel

@{
    ViewData["Title"] = "Create";

    ViewData["Date"] = DateTime.Now;
}

<h1>Create</h1>

<h4>Expenses</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Expenses.Date" class="control-label"></label>
                <input asp-for="Expenses.Date" class="form-control" />
                <span asp-validation-for="Expenses.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expenses.Amount" class="control-label"></label>
                <input asp-for="Expenses.Amount" class="form-control" />
                <span asp-validation-for="Expenses.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expenses.PaymentMethod" class="control-label">Payment Method</label>
                <select asp-for="Expenses.PaymentMethod" class="form-control" asp-items="ViewBag.PaymentType"></select>
            </div>
            <div class="form-group">
                <label asp-for="Expenses.WalletId" class="control-label">Wallet</label>
                <select asp-for="Expenses.WalletId" class="form-control" asp-items="ViewBag.Wallet"></select>
            </div>
            <div class="form-group">
                <label asp-for="Expenses.Description" class="control-label"></label>
                <input asp-for="Expenses.Description" class="form-control" />
                <span asp-validation-for="Expenses.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expenses.AssetId" class="control-label">Asset</label>
                <select asp-for="Expenses.AssetId" class="form-control" asp-items="ViewBag.AssetId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Expenses.PayeeId" class="control-label">Payee</label>
                <select asp-for="Expenses.PayeeId" class ="form-control" asp-items="ViewBag.PayeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Expenses.CategoryTypeId" class="control-label">Category</label>
                <select asp-for="Expenses.CategoryTypeId" class ="form-control" asp-items="ViewBag.CategoryTypeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
