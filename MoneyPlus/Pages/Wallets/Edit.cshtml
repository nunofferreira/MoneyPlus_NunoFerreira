@page
@model MoneyPlus.Pages.Wallets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Wallet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Wallet.Id" />
            <div class="form-group">
                <label asp-for="Wallet.Balance" class="control-label"></label>
                <input asp-for="Wallet.Balance" class="form-control" />
                <span asp-validation-for="Wallet.Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Wallet.Name" class="control-label"></label>
                <input asp-for="Wallet.Name" class="form-control" />
                <span asp-validation-for="Wallet.Name" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Wallet.UserId" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}