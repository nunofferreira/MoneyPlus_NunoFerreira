@page
@model MoneyPlus.Pages.Wallets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Wallets</h1>

<p>
    <a asp-page="Create">Create New Wallet</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Wallet[0].Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wallet[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Wallet)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Balance)<i> €</i>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
