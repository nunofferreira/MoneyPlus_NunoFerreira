@page
@model MoneyPlus.Pages.Reports.YearlyExpensesModel

@{
    var year = Model.ExpensesBySubCategory.SubCategories.FirstOrDefault().Year;
    ViewData["Title"] = $"YearlyExpenses - {year}";

    var nextYear = year++;
    var prevYear = year--;
}

<h1>Yearly Expenses</h1>

<p>
    @*<button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>*@
    <a asp-page="./YearlyExpenses" asp-route-year="@prevYear">Previous Year</a>
    <a asp-page="./YearlyExpenses" asp-route-year="@nextYear">Next Year</a>
</p>

<hr />
<h4>Total for Category/Month</h4>
<table class="table">
    <thead>
        <tr><th>@Model.ExpensesBySubCategory.SubCategories.FirstOrDefault().Year</th></tr>
        @for (int i = 1; i <= 12; i++)
        {
            <tr>
                <th>
                    @(new DateTime(2010, i, 1)).ToString("MMM", CultureInfo.InvariantCulture)
                </th>
            </tr>
        }
    </thead>
    <tbody>
        @foreach (var item in Model.ExpensesBySubCategory.SubCategories)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>

            </tr>
        }
    </tbody>
</table>

<hr />
